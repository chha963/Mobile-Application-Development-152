<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/card_foreground"
    android:orientation="horizontal"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView_ProductCardVerticalLayout"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_place_holder"
                app:riv_corner_radius="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/txtViewProductName_ProductCardVerticalLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="TEN SAN PHAM"
                        android:textColor="@color/content_main_fragment_name_product"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/txtViewProductPrice_ProductCardVerticalLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center"
                        android:text="25.000 VND"
                        android:textColor="@color/tab_layout_default_green_background"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/txtViewProductDate_ProductCardVerticalLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="7 ngay"
                        android:textColor="@color/content_main_fragment_description_product"
                        android:textSize="10sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtViewProductDescription_ProductCardVerticalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Mot doan mo ta ngan san pham"
                    android:textColor="@color/content_main_fragment_name_product"
                    android:textSize="10sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViewEditProduct_ProductCardVerticalLayout"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1.0"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="SỬA"
                android:textColor="@color/tab_layout_default_green_background"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/txtViewRemoveProduct_ProductCardVerticalLayout"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1.0"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="XÓA"
                android:textColor="@color/tab_layout_default_green_background"
                android:textSize="10sp"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
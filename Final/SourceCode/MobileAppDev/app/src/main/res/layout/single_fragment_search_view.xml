<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewSearchResult_SearchViewSingleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:paddingTop="64dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/searchTintView_SearchViewSingleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:background="#88000000"
        android:elevation="2dp"
        android:layerType="hardware"
        android:visibility="gone"/>

    <org.cryse.widget.persistentsearch.PersistentSearchView
        android:id="@+id/searchView_SearchViewSingleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="4dp"
        app:persistentSV_customToolbarHeight="@dimen/search_view_custom_toolbar_height"
        app:persistentSV_displayMode="toolbar"
        app:persistentSV_editHintText="@string/text_hint_default_search_view"
        app:persistentSV_editHintTextColor="?android:textColorHint"
        app:persistentSV_editTextColor="?android:textColorPrimary"
        app:persistentSV_homeButtonMode="burger"
        app:persistentSV_logoString="@string/logo_text_default_search_view"
        app:persistentSV_searchCardElevation="2dp"
        app:persistentSV_searchTextColor="?android:textColorPrimary"/>
</RelativeLayout>
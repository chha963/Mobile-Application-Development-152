<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout_GalleryItemPostProductHolder"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/card_foreground">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mainImageView_GalleryItemPostProductHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            app:riv_corner_radius="12dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pencilEditImageView_GalleryItemPostProductHolder"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/pencil_edit_white"
            android:src="@drawable/ic_pencil_edit"
            app:riv_corner_radius="8dp"
            />

    </RelativeLayout>

</FrameLayout>
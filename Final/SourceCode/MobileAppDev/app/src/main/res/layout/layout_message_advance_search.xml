<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Số ngày còn lại"/>

    <com.appyvet.rangebar.RangeBar
        android:id="@+id/dateLimitRangeBar_AdvanceSearchMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        custom:connectingLineColor="@color/tab_layout_default_green_background"
        custom:pinMaxFont="12sp"
        custom:rangeBar="false"
        custom:rangeBarColor="@color/advance_search_range_bar_unselected_range_color"
        custom:rangeBarPaddingBottom="40dp"
        custom:selectorColor="@android:color/black"
        custom:temporaryPins="false"
        custom:textColor="@android:color/black"
        custom:tickEnd="7"
        custom:tickHeight="0dp"
        custom:tickInterval="1"
        custom:tickStart="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Giá (đơn vị VNĐ)"/>

    <com.cse.hcmut.mobileappdev.view.features.home.search.advancesearch.rangebar.MyExponentialDistanceRangeBar
        android:id="@+id/priceLimitRangeBar_AdvanceSearchMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        custom:connectingLineColor="@color/tab_layout_default_green_background"
        custom:pinMaxFont="10sp"
        custom:rangeBar="true"
        custom:rangeBarColor="@color/advance_search_range_bar_unselected_range_color"
        custom:rangeBarPaddingBottom="40dp"
        custom:selectorColor="@android:color/black"
        custom:temporaryPins="false"
        custom:textColor="@android:color/black"
        custom:tickEnd="50"
        custom:tickHeight="0dp"
        custom:tickStart="0"/>

</LinearLayout>
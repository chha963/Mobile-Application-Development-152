<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout_GalleryItemPostProductEmptyPlaceHolder"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/card_foreground">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView_GalleryItemPostProductPlaceHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:background="@drawable/post_product_dotted_border"
            app:riv_corner_radius="12dp"/>
    </RelativeLayout>

</FrameLayout>